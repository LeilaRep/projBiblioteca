@model Usuario

<h2>Edição de Usuário</h2>
<form asp-action="Atualizar" method="POST">
<input type="hidden" asp-for="Id" />
    <p>
        <label asp-for="nomeUsuario">Nome:</label>
        <input asp-for="nomeUsuario" required/>
    </p>
    <p>
        <label asp-for="login">Login:</label>
        <input asp-for="login" required/>
    </p>
    <p>
        <label asp-for="senha">Senha:</label>
        <input asp-for="senha" required/>
    </p>
    <p>
        <label asp-for="dataNascimento">Data de Nascimento:</label>
        <input asp-for="dataNascimento" required/>
    </p>
    <p>
        <input type="submit" value="Concluído" />
    </p>
</form>