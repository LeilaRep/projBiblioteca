@model Usuario
<h1>Realize a Edição do Usuário</h1>

<form action="editarUsuario" method="post">
    <input type="text" name="Nome" id="userNome" value="@Model.nomeUsuario">
    <input type="text" name="login" id="userLogin" value="@Model.login">
    <input type="text" name="senha" id="userSenha" value="@Model.senha">

    <select name="tipo" id="userTipo">
        <option value="@Usuario.admin">Administrador</option>
        <option value="@Usuario.padrao">Padrão</option>
    </select>

    <input type="hidden" asp-for="Id" />

    <input type="submit" value="CONCLUIR EDIÇÃO">
</form>